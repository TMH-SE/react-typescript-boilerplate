{
  "compilerOptions": {
		"jsx": "react-jsx",
    "module": "commonjs",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "preserve",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app": ["app"],
      "@assets/*": ["assets/*"],
      "@components": ["components"],
      "@constants/*": ["constants/*"],
      "@layouts": ["layouts"],
      "@pages/*": ["pages/*"],
      "@routers": ["routers"],
      "@utils/*": ["utils/*"],
      "@style/*": ["style/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
